doctype html

html
	head
		title Slow Reader
		link(rel="stylesheet",type="text/css",href="stylesheet.css")
		script(src="script.js")
	body(class="CenterContainer")
		div(class="ContainerPage CenterContent",id="EntryContainer")
			h1 Slow Reader
			:markdown-it
				Displays text one word at a time, with some hints for homophones.
				Put the text into the box below and press `Start`.
				You may come back to this editor by pressing `Back` and then return to
				your previous location with `Resume`.
			textarea(id="text",oninput="check_input()")
			div(class="ButtonArea ButtonGroup")
				button(onclick="start_display(false)",id="start",disabled) Start
				button(onclick="start_display(true)",id="resume",disabled,autocomplete="off") Resume
		div(class="ContainerPage CenterContent",id="WordDisplay",style="display:none;")
			div
				span(id="word")
				span(id="hint")
			div(class="ButtonArea ButtonGroup")
				button(id="back",onclick="prev_word()") <
				button(onclick="show_editor()") Back
				button(id="fwd",onclick="next_word()") >

